{
  "name": "@codearemo/livemenu-ui",
  "version": "1.0.0",
  "description": "A React component library for LiveMenu",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/styles.css": "./dist/styles.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c --configPlugin typescript",
    "watch": "rollup -c -w --configPlugin typescript",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "publish:github": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codearemo/livemenu-ui.git"
  },
  "bugs": {
    "url": "https://github.com/codearemo/livemenu-ui/issues"
  },
  "homepage": "https://github.com/codearemo/livemenu-ui#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "livemenu",
    "tailwind",
    "typescript"
  ],
  "author": "LiveMenu Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^24.7.0",
    "@types/postcss-load-config": "^2.0.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.52.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
